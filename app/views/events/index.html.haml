- content_for :head do
  = javascript_include_tag 'shiftcal'

%div#calendar_container
  %div#previous_month
  %table
    %thead
      - day = Date.today.day - 1
      %tr.week 
        - 7.times do
          %td.day
            #datebox
              .date= day += 1
              %ul
                = render :partial => 'week_box'
  %div#next_month
    = link_to ">>"
    

