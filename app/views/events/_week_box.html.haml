%table
  %tr.week 
    - 7.times do
      %td.day
        #datebox
          - day = @marker.day
          %strong.day= @marker.strftime("%A")
          .date= day
          - @marker += 1.days
          %ul
            - @week_events.select { |e| e.date.day == day }.each do |event|
              %li= link_to event.name, event_path(event), :class => 'event'
