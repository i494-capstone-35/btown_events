%table{:'data-message' => @m || 0}
  %tr.week 
    - 7.times do
      %td.day
        #datebox
          - day = @marker.day
          .date{:'data-message' => next_month(@marker)}= day
          .day= @marker.strftime("%A")
          - @marker += 1.days
          %ul
            - @week_events.select { |e| e.date.day == day }.each do |event|
              %li
                %a.event{:href => event_path(event)}
                  = event.name
                  - unless event.start_time.blank?
                    %span.start_time= "#{event.start_time.strftime("%l:%M %p")}"

                  
